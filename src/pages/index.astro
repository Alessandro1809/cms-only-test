---
import "@/styles/global.css";
import { SignIn } from "@clerk/astro/components";
import { dark } from "@clerk/themes";

const { userId } = await Astro.locals.auth();
const isTestMode =
    import.meta.env.MODE === "test" || process.env.MODE === "test";

if (userId) {
    return Astro.redirect("/admin");
}
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
        <title>NOUS CMS welcome</title>
    </head>
    <body
        class="bg-black min-h-screen flex items-center justify-center relative overflow-hidden text-white"
    >
        <!-- Prismatic Aurora Burst - Multi-layered Gradient (Consistent with AdminLayout) -->
        <div
            class="absolute inset-0 z-0"
            style={{
                background: `
          radial-gradient(ellipse 120% 80% at 70% 20%, rgba(255, 20, 147, 0.15), transparent 50%),
          radial-gradient(ellipse 100% 60% at 30% 10%, rgba(0, 255, 255, 0.12), transparent 60%),
          radial-gradient(ellipse 90% 70% at 50% 0%, rgba(138, 43, 226, 0.18), transparent 65%),
          radial-gradient(ellipse 110% 50% at 80% 30%, rgba(255, 215, 0, 0.08), transparent 40%),
          #000000
        `,
            }}
        >
        </div>

        <div
            class="absolute inset-0 z-0 opacity-30"
            style={{
                backgroundImage:
                    "linear-gradient(transparent 0%, rgba(255,255,255,0.06) 50%, transparent 100%), linear-gradient(90deg, rgba(255,255,255,0.04) 1px, transparent 1px)",
                backgroundSize: "100% 100%, 48px 48px",
                backgroundPosition: "0 0, 0 0",
            }}
        >
        </div>
        <div class="absolute -top-24 left-1/2 z-0 h-[28rem] w-[28rem] -translate-x-1/2 rounded-full bg-fuchsia-500/20 blur-[140px]">
        </div>
        <div class="absolute -bottom-24 right-[-10%] z-0 h-[22rem] w-[22rem] rounded-full bg-cyan-400/20 blur-[140px]">
        </div>

        <div class="z-10 relative w-full max-w-lg px-4 sm:px-6">
            <div class="relative">
                <div class="absolute -inset-0.5 rounded-3xl bg-gradient-to-br from-white/20 via-fuchsia-500/20 to-cyan-400/20 blur">
                </div>
                <div
                    class="relative rounded-3xl border border-white/10 bg-white/5 px-7 py-8 shadow-[0_25px_80px_-40px_rgba(0,0,0,0.85)] backdrop-blur-2xl sm:px-10 sm:py-10"
                >
                    <div class="flex items-center justify-between">
                        <span class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-[10px] uppercase tracking-[0.2em] text-white/70">
                            <span class="h-1.5 w-1.5 rounded-full bg-emerald-400 shadow-[0_0_10px_rgba(16,185,129,0.8)]">
                            </span>
                            acceso seguro
                        </span>
                      
                    </div>
                    <h1 class="mt-6 text-3xl font-semibold tracking-tight sm:text-4xl">
                        Gestiona el contenido
                        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-cyan-200 via-fuchsia-300 to-amber-200">
                            con estilo y control
                        </span>
                    </h1>
                    <p class="mt-3 text-sm text-white/60">
                        Inicia sesi√≥n para mantener el flujo editorial en un
                        solo lugar.
                    </p>
                    <div class="mt-6 h-px w-full bg-gradient-to-r from-transparent via-white/30 to-transparent">
                    </div>

                    <div class="mt-6 flex justify-center">
                        <SignIn
                            routing="hash"
                            forceRedirectUrl="/admin"
                            appearance={{
                                baseTheme: dark,
                                elements: {
                                    rootBox: "w-full",
                                    card: "bg-transparent shadow-none w-full p-0",
                                    headerTitle: "hidden",
                                    headerSubtitle: "hidden",
                                    formFieldLabel:
                                        "text-white/60 text-[11px] uppercase tracking-widest",
                                    formFieldInput:
                                        "bg-white/5 border border-white/10 text-white placeholder:text-white/40 focus:border-cyan-300/60 focus:ring-2 focus:ring-cyan-300/30",
                                    formButtonPrimary:
                                        "bg-gradient-to-r from-emerald-500 via-cyan-500 to-blue-500 hover:from-emerald-400 hover:via-cyan-400 hover:to-blue-400 border-none shadow-[0_12px_30px_-18px_rgba(34,197,94,0.8)]",
                                    footerActionText: "text-white/50",
                                    footerActionLink:
                                        "text-white hover:text-cyan-300",
                                    dividerLine: "bg-white/10",
                                    dividerText: "text-white/40",
                                },
                            }}
                        />
                    </div>

                    {
                        isTestMode && (
                            <div class="mt-6 rounded-xl border border-white/10 bg-black/30 px-3 py-2 text-[11px] text-white/70 backdrop-blur">
                                <p class="text-[10px] uppercase tracking-widest text-white/50">
                                    Credenciales de prueba
                                </p>
                                <div class="mt-2 space-y-1 font-mono">
                                    <p>Correo: ohn+clerk_test@example.com</p>
                                    <p>Codigo: 424242</p>
                                    <p>Contrasena: test.1234.user</p>
                                </div>
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
    </body>
</html>
